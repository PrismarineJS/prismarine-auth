{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        "target": "es2022",
        "module": "Node16",
        "rootDir": "/",
        "strict": true,
        "alwaysStrict": true,
        "moduleResolution": "Node16",
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "exclude": ["node_modules"]
}
